@model Rentbuddy.Models.Customer

@{
    ViewBag.Title = "SignUp";
    var failed = ViewBag.failed;
    var success= ViewBag.Success;
}

<link href="~/Content/signup.css" rel="stylesheet" />


@using (Html.BeginForm("SignUp", "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="login-wrap" style="min-height: 900px; margin-top:30px;">
        <div class="login-html">
            <h4 style="font-size: 30px; font-family: cursive; color: yellow; font-weight: bold;">Customer</h4>
            <input id="tab-1" type="radio" name="tab" class="sign-in"><label for="tab-1" class="tab"><a href="@Url.Action("Login","Customers")" style="color: aliceblue; font-weight: bold; ">Sign In</a></label>
            <input id="tab-2" type="radio" name="tab" class="sign-up" checked><label for="tab-2" class="tab">Sign Up</label>
            <div class="login-form">
                <div class="sign-in-htm">
                </div>
                <div class="sign-up-htm">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="group">
                        @Html.LabelFor(model => model.Customer_Name, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_Email, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_Email, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_PhoneNO, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_PhoneNO, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_PhoneNO, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_Address, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_Address, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_History, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_History, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_History, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_Password, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Customer_Password, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Customer_Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="group">
                        @Html.LabelFor(model => model.Customer_Image, htmlAttributes: new { @class = "label" })
                        <input type="file" name="CustomerImageFile" required />
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Sign Up">
                        <h4 class="text-center" style="font-family:cursive; font-size:20px; margin-top:10px; color:#ffd800;">
                            Already a member! Please <a class="signup__link" href="@Url.Action("Login","Customers")" style="color: #4cff00; font-weight:bold;">SignIn</a>
                        </h4>
                        @if (failed != null)
                        {
                            <h3 style="color:#85F12B; text-align:center">
                                @failed
                            </h3>
                        }
                        @if (success != null)
                        {
                            <h3 style="color:#85F12B; text-align:center">
                                @success
                            </h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
