@model IEnumerable<Rentbuddy.Models.OrderM>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/team.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX" style="margin-top:20px;">

    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>

<div class="tableX">
    <table class="containerD" style="width:1140px;">
        <thead>
            <tr>
                <th>
                    <h1 style="color: #3BFD0B; margin-left:40px; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Order_RentHour)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; margin-left:40px; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Order_FromLocation)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; margin-left:40px; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Order_ToLocation)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; margin-left:40px; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Order_TotalPrice)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; margin-left:40px; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Customer.Customer_Name)
                    </h1>
                </th>
                <th>
                    <h1 style="color: #3BFD0B; font-family: cursive; font-size: 20px;">
                        @Html.DisplayNameFor(model => model.Vehicle.Vehicle_Name)
                    </h1>
                </th>
                <th style="width: 180px;">
                    <h1 style="color: #3BFD0B; font-family:cursive; font-size:20px;">
                        Controll
                    </h1>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_RentHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_FromLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_ToLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Customer_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle.Vehicle_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Order_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Order_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Order_ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
