@model Rentbuddy.Models.OrderM

@{
    ViewBag.Title = "Create";
    var success = ViewBag.Success;
    var failed = ViewBag.Failed;
}

<link href="~/Content/search.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <div class="thumbnail__content text-center">
                
            </div>
        </div>
        <div class="container__child signup__form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Customer Name</label>
                @Html.DropDownList("Customer_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customer_ID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Vehicle Name</label>
                @Html.DropDownList("Vehicle_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Vehicle_ID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Rent Durantion (Day)</label>
                @Html.EditorFor(model => model.Order_RentHour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order_RentHour, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>From Location</label>
                @Html.EditorFor(model => model.Order_FromLocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order_FromLocation, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>To Location</label>
                @Html.EditorFor(model => model.Order_ToLocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order_ToLocation, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Total Price</label>
                @Html.EditorFor(model => model.Order_TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order_TotalPrice, "", new { @class = "text-danger" })
            </div>


            <div class="m-t-lg">
                <ul class="list-inline text-center">
                    <li>
                        <input type="submit" value="To Rent" class="btn btn--form" />
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
