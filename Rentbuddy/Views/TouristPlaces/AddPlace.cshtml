@model Rentbuddy.Models.TouristPlace

@{
    ViewBag.Title = "AddPlace";
    var success = ViewBag.Success;
    var failed = ViewBag.Failed;
}

<link href="~/Content/placeadd.css" rel="stylesheet" />
<link href="~/Content/adminbutton.css" rel="stylesheet" />

<div class="containerX" style="margin-top:20px;">

    <a class="card1" href="@Url.Action("AdminView", "Admins")">
        <h3>Back To Home</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
    <a class="card1" href="@Url.Action("PlaceList", "TouristPlaces")">
        <h3>See All Place</h3>
        <div class="go-corner">
            <div class="go-arrow">
                →
            </div>
        </div>
    </a>
</div>


@using (Html.BeginForm("AddPlace", "TouristPlaces", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="signup__container">
        <div class="container__child signup__thumbnail">
            <div class="thumbnail__content text-center">
                <h1 class="heading--primary">Welcome </h1>
                @if (success != null)
                {
                    <h2 style="color:#85F12B;">
                        @success
                    </h2>
                }
                else
                {
                    <h2 style="color:#85F12B;">
                        @failed
                    </h2>
                }
            </div>
        </div>
        <div class="container__child signup__form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Place Name</label>
                @Html.EditorFor(model => model.TouristPlace_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "place name" } })
                @Html.ValidationMessageFor(model => model.TouristPlace_Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Place Photo</label>
                <input type="file" name="TouristImageFile" required />
            </div>
            <div class="form-group">
                <label>Place Description</label>
                @Html.EditorFor(model => model.TouristPlace_Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "place description" } })
                @Html.ValidationMessageFor(model => model.TouristPlace_Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Place Location</label>
                @Html.EditorFor(model => model.TouristPlace_Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "add location" } })
                @Html.ValidationMessageFor(model => model.TouristPlace_Location, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Latitude</label>
                @Html.EditorFor(model => model.TouuristPlace_Lat, new { htmlAttributes = new { @class = "form-control", @placeholder = "latitude" } })
                @Html.ValidationMessageFor(model => model.TouuristPlace_Lat, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Longitude</label>
                @Html.EditorFor(model => model.TouristPlace_long, new { htmlAttributes = new { @class = "form-control", @placeholder = "longitude" } })
                @Html.ValidationMessageFor(model => model.TouristPlace_long, "", new { @class = "text-danger" })
            </div>

            <div class="m-t-lg">
                <ul class="list-inline text-center">
                    <li>
                        <input type="submit" value="Add Place" class="btn btn--form" />
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
