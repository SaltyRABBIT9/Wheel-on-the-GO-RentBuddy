@model Rentbuddy.Models.Admin

@{
    ViewBag.Title = "Login";
    var failed = ViewBag.Failed;
}

<link href="~/Content/loginA.css" rel="stylesheet" />
<h2 style="text-align:center;">Only Admin Can Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="signup__container">
        <div class="container__child signup__form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Name</label>
                @Html.EditorFor(TempAdmin => TempAdmin.Admin_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Name" } })
                @Html.ValidationMessageFor(TempAdmin => TempAdmin.Admin_Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.EditorFor(TempAdmin => TempAdmin.Admin_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email" } })
                @Html.ValidationMessageFor(TempAdmin => TempAdmin.Admin_Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.EditorFor(TempAdmin => TempAdmin.Admin_Password, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "*******" })
                @Html.ValidationMessageFor(TempAdmin => TempAdmin.Admin_Password, "", new { @class = "text-danger" })
            </div>
            <div class="m-t-lg">
                <ul class="list-inline text-center">
                    <li>
                        <input type="submit" value="Sign In" class="btn btn--form" />
                    </li>
                </ul>
            </div>
        </div>
        <div class="container__child signup__thumbnail">
            <div class="thumbnail__content text-center">
                <h1 class="heading--primary">Welcome to RentBuddy</h1>
                @if (failed != null)
                {
                    <h2 style="color:#85F12B;">
                        @failed
                    </h2>
                }
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


