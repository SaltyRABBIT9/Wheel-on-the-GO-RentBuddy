@model Rentbuddy.Models.Admin

@{
    ViewBag.Title = "AdminProfile";
}

<link href="~/Content/profile.css" rel="stylesheet" />

<div class="wrapper">
    <div class="profile-card js-profile-card">
        <div class="profile-card__img">
            @if (Model.Admin_Image != null)
            {
                var imgPath = Model.Admin_Image;
                <img src="@Url.Content(imgPath)" alt="profile card">
            }
        </div>
        <div class="profile-card__cnt js-profile-cnt">
            <div class="profile-card__name">@Html.DisplayFor(model => model.Admin_Name)</div>
            <div class="profile-card__txt">@Html.DisplayFor(model => model.Admin_Email)</div>
            <div class="profile-card__txt">@Html.DisplayFor(model => model.Admin_PhoneNO)</div>
            <div class="profile-card-loc">
                <span class="profile-card-loc__txt">
                    @Html.DisplayFor(model => model.Admin_Address)
                </span>
            </div>
        </div>
        <div>
            <a href="@Url.Action("Edit", "Admins",new { id = Model.Admin_ID })" style="justify-content: center; text-align: center; float:left;">
                <h3 style="background: #5B0539; height: 30px; width: 100px; border-radius: 10px; color: #1FD809; padding-left: 4px;">
                    Edit
                </h3>
            </a>
            <a href="@Url.Action("Delete", "Admins",new { id = Model.Admin_ID })" style="justify-content: center; text-align: center; float:right;">
                <h3 style="background: #5B0539; height: 30px; width: 100px; border-radius: 10px; color: #1FD809;">
                    Delete
                </h3>
            </a>
        </div>
    </div>
</div>
